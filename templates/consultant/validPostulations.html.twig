{% extends "consultant/index.html.twig" %}

{% block title %}Approuver les postulations{% endblock %}

{% block profil %}
	<div class="col-3 d-flex flex-column profil text-center text-white fs-5">
		<span class="p-2 my-5 fw-bold fs-4">Mon profil consultant</span>
		<span class="mb-5 p-2">{{ user.email }}</span>
		<a href="{{ path('consultant_home') }}" class="btn btn-outline-warning">Activer les comptes</a>
		<a href="{{ path('valid_jobs') }}" class="btn btn-outline-warning mt-3">Valider les annonces</a>
		<a href="#" class="btn btn-warning mt-3">Approuver les postulations</a>
		
		<a href="{{ path('app_logout') }}" class="btn btn-outline-warning mt-5">Se d√©connecter</a>
	</div>
{% endblock %}

{% block main %}
	<main class="col-9 main">
		<h2 class="text-center my-5 fs-3 fw-bold">Approuver les postulations</h2>
		{% if requests|length > 0 %}
			{% for request in requests %}
				<div class="row mb-5 d-flex justify-content-center">
					<div class="col-6">
						{% include "consultant/_job.html.twig" %}
					</div>
					<div class="col-6">
						{% include "consultant/_candidateRequestsTable.html.twig" %}
					</div>
				</div>
			{% endfor %}
		{% else %}
			<p class="text-center mt-4">Aucune demande de postulation</p> 
		{% endif %}
	</main>
{% endblock %}