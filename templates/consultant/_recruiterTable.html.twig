<div class="row d-flex justify-content-center">
	<div class="col-6">
		<table class="table table-hover text-center">
			<thead>
				<tr>
					<th>Email</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for user in pendingRecruiters %}
					<tr>
						<td>{{ user.email }}</td>
						<td>
							<a href="{{ path('activate_recruiter', {'id' : user.id}) }}" class="btn btn-success">Activer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>