<div class="row d-flex justify-content-center">
	<div class="col-8">
		<table class="table table-hover text-center">
			<thead>
				<tr>
					<th>Entreprise</th>
					<th>Adresse</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for user in pendingRecruiters %}
					<tr>
						<td>{{ user.company }}</td>
						<td>{{ user.address }}</td>
						<td>
							<a href="{{ path('activate_recruiter', {'id' : user.id}) }}">
								<button type="button" class="btn btn-success">Activer</button>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>