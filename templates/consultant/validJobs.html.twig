{% extends "consultant/index.html.twig" %}

{% block title %}Valider les annonces{% endblock %}

{% block profil %}
	<div class="col-3 d-flex flex-column profil text-center text-white fs-5">
		<span class="p-2 my-5 fw-bold fs-4">Mon profil consultant</span>
		<span class="mb-5 p-2">{{ user.email }}</span>
		<a href="{{ path('consultant_home') }}" class="btn btn-outline-warning">Activer les comptes</a>
		<a href="#" class="btn btn-warning mt-3">Valider les annonces</a>
		<a href="{{ path('valid_postulations') }}" class="btn btn-outline-warning mt-3">Approuver les postulations</a>
		
		<a href="{{ path('app_logout') }}" class="btn btn-outline-warning mt-5">Se déconnecter</a>
	</div>
{% endblock %}

{% block main %}
	<main class="col-9 main">
		<h2 class="text-center mt-5 fs-3 fw-bold mb-5">Annonces à valider</h2>
		{% if invalidJobs|length > 0 %}
			{% for job in invalidJobs %}
				{% include "consultant/_invalidJob.html.twig" %} 
			{% endfor %}
		{% else %}
			<p class="text-center mt-4">Aucune annonce à activer</p>
		{% endif %}
	</main>
{% endblock %}