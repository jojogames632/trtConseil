{% if validJobRequests is empty %}
	<p class="text-center mt-4">Vous n'avez pas encore publié d'annonce</p>
{% else %}
	<table class="table table-hover table-striped mt-5">
		<thead class="thead-dark">
			<tr>
				<th>Titre de l'annonce</th>
				<th>Prénom du candidat</th>
				<th>Nom du candidat</th>
				<th>CV du candidat</th>
			</tr>
		</thead>
		<tbody>
		{% for validJobRequest in validJobRequests %}
			{% if validJobRequest|length > 0 %}
				{% for filtredValidJobRequest in validJobRequest %}
					<tr>
						<td>{{ filtredValidJobRequest.job.title }}</td>
						<td>{{ filtredValidJobRequest.candidate.firstName}}</td>
						<td>{{ filtredValidJobRequest.candidate.lastName}}</td>
						<td>
							<a target="_blank" href="{{ asset('uploads/cv/' ~ filtredValidJobRequest.candidate.cvFilename) }}" class="text-decoration-none" id="cvLink">{{ filtredValidJobRequest.candidate.cvFilename }}</a>
						</td>
					</tr>
				{% endfor %}
			{% endif %}
		{% endfor %}	
		</tbody>
	</table>
{% endif %}